{
    "parser": "babel-eslint",
    "env": {
        "browser": true
    },
    "extends": [
        "standard"
    ],
    "rules": {
        // Personal preferences
        "quotes": [
            "error",
            "double"
        ],
        "indent": [
            "error",
            4
        ],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "always",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "padded-blocks": [
            "error",
            {
                "classes": "always"
            }
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}